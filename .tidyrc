quiet: yes
show-errors: 6
show-warnings: yes

char-encoding: utf8

add-xml-space: yes
tidy-mark: no
output-encoding: utf8
add-xml-decl: no
escape-cdata: no

wrap: 80
wrap-php: no
wrap-attributes: yes
indent: auto
indent-spaces: 2
indent-cdata: yes

# Strip Microsoft-specific HTML and output spaces rather than their non-breaking spaces:
fix-backslash: yes
fix-uri: no
drop-proprietary-attributes: no
drop-font-tags: yes
drop-empty-paras: yes
replace-color: yes
join-styles: no
merge-divs: no
merge-spans: no
quote-ampersand: no
gnu-emacs: yes
